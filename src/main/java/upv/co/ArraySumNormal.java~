package upv.co;

import java.util.Random;

public class ArraySumNormal {
    public static void main(String[] args) {
        int size = 100000;
        int[] a = new int[size];
        int[] b = new int[size];
        int[] c = new int[size];

        Random r = new Random();

        // Llenamos los arrays con números aleatorios
        for (int i = 0; i < size; i++) {
            a[i] = r.nextInt(100);
            b[i] = r.nextInt(100);
        }

        // Tomamos el tiempo antes de la suma
        long startTime = System.nanoTime();

        // Suma de arrays
        for (int i = 0; i < size; i++) {
            c[i] = a[i] + b[i];
        }

        // Tiempo después de la suma
        long endTime = System.nanoTime();

        // Calculamos la diferencia en nanosegundos y milisegundos
        long durationNano = endTime - startTime;
        double durationMillis = durationNano / 1_000_000.0;

        // Mostramos los resultados
        System.out.println("Suma lista:");
        for (int i = 0; i < size; i++) {
            System.out.print(c[i] + (i < size - 1 ? " " : "\n"));
        }

        System.out.println("\nTiempo de ejecución:");
        System.out.println(durationNano + " nanosegundos");
        System.out.println(durationMillis + " milisegundos");
    }
}
